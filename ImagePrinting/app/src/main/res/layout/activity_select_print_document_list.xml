<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/redColor"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SelectPrintDocumentListActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:background="@color/whiteColor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="26dp"
            android:text="Customer’s photo required?"
            android:textColor="@color/blackColor" />
    </RelativeLayout>

    <CheckBox
        android:id="@+id/customerPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/relativeLayout"
        android:background="@color/whiteColor"
        />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginTop="22dp"
        android:background="@color/whiteColor"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="26dp"
            android:text="Customer’s ID required?"
            android:textColor="@color/blackColor" />
    </RelativeLayout>

    <CheckBox
        android:id="@+id/customerId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/relativeLayout2"
        android:background="@color/whiteColor"
        />

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout2"
        android:layout_marginTop="60dp"
        android:background="@color/whiteColor"
        android:id="@+id/relativeLayout3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="26dp"
            android:text="Nominee’s photo required?"
            android:textColor="@color/blackColor" />
    </RelativeLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New CheckBox"
        android:id="@+id/nomineePhoto"
        android:layout_alignTop="@+id/relativeLayout3"
        android:layout_alignStart="@+id/customerId"
        android:layout_alignBottom="@+id/relativeLayout3"
        android:background="@color/whiteColor"/>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_below="@+id/relativeLayout3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:background="@color/whiteColor"
        android:id="@+id/relativeLayout4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nominee’s ID required?"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="26dp"
            android:textColor="@color/blackColor"/>

    </RelativeLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nomeneeId"
        android:layout_alignTop="@+id/relativeLayout4"
        android:layout_alignStart="@+id/nomineePhoto"
        android:background="@color/whiteColor"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Proceed"
        android:id="@+id/button"
        android:layout_below="@+id/nomeneeId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:background="@color/whiteColor"/>


</RelativeLayout>
